<script>

var questionsIndex = 0;
var questions;
var answers = [];
var radios = [];  //my
var startTime;
var selectCount = 0;
$(document).ready(function(){

  $.post("http://localhost:3000/loadquestions", function(res){

    questions = res.questions;
        //console.log(questions);
    loadQuestion(0, questions);
  } );

  $("#next").click(function() {

    if (getAnswer(questionsIndex)) {
      questionsIndex++;
      if (questionsIndex === questions.length) {
        var data = { 'answers': answers, 'radios': radios};
        document.getElementById("next").value="Finished";
        document.getElementById("next").disabled = true;

        //var data = { answers, radios };
        //console.log(JSON.stringify(data));
        //console.log('Finished');
        $.ajax({
          url:"http://localhost:3000/submit",
          contentType: 'application/json',
          data: JSON.stringify(data),
          type: "POST"})
        .done(function(res) {
          //appendResults(res);
        } );
      }
      else{
        loadQuestion(questionsIndex, questions);
      }
    }
  });

  //$("input[type=radio]").click(function() {
    //selectCount++;
  //});

  $("input[type=radio]").click(function() {
    selectCount++;
    console.log('Selectcount: %d', selectCount);
    $("input[type=radio]").each(function() {
      if (this.checked) {
        radios.push({'id':questionsIndex+1, 'selected_history':this.value});
      //radios.push({'':questionsIndex+1, '':this.value});
        console.log('radio='+radios);
        console.log(this.value);
        return;
      }
    });
  });
});

function loadQuestion(num, questions) {
  var questionHeader = $("#question_header");
  var questionBody = $("#question_body");
  var answerForm = $("#answer_form");
  //var img="<img src= '" + questions[num].question + '>';
  var img='<img src= "' + questions[num].question + '">';
  //console.log(img.value);
  //$("#question_title").append(questions[num].question);

  $("#question_title").html(img);
  $("#choice_a_label").html(questions[num].choice_a);
  $("#choice_b_label").html(questions[num].choice_b);
  $("#choice_c_label").html(questions[num].choice_c);
  $("#choice_d_label").html(questions[num].choice_d);
  startTime = Date.now();
  selectCount = 0;

}


function getAnswer() {
  var answerSelected = false;
  $("input[type=radio]").each(function() {
    if (this.checked) {
      var timeElapsed = (Date.now() - startTime)/1000.0;
      answers.push({'id':questionsIndex+1, 'answer':this.value, 'timeElapsed':timeElapsed, 'selectCount':selectCount});
      //console.log(answers);
      this.checked = false;
      answerSelected = true;
      return;
    }

  });
  return answerSelected;
}
function appendResults(res) {
  $("#results").append("Correct: " + res.correct + "<br>");
  for (var i = 0; i < answers.length; i++) {
    $("#results").append(JSON.stringify(answers[i]) + "<br>");
  }

}

